{% block content %}

<!-- Hero Section -->
<div class="relative w-full">
  <video
    autoplay
    muted
    playsinline
    class="w-full h-full object-cover mb-4"
    onended="this.pause(); this.currentTime = this.duration - 0.03;"
  >
